{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5500/pages/base.html",
            "webRoot": "${workspaceFolder}/pages",
            "preLaunchTask": "Live Server",
            "postDebugTask": "Terminate Live Server",
            "runtimeArgs": ["--disable-web-security"]
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:5500/pages/base.html",
            "webRoot": "${workspaceFolder}/pages",
            "preLaunchTask": "Live Server",
            "postDebugTask": "Terminate Live Server"
        }
    ]
}
